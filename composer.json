
{
  "name": "hitmeister/metrics",
  "description": "Metrics forwarder for PHP.",
  "version": "2.0.2",
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "Maksim Naumov",
      "email": "maksim.naumov@hitmeister.de",
      "role": "Developer"
    }
  ],
  "keywords": [
    "metrics",
    "monitoring",
    "counter",
    "timer",
    "gauge",
    "statsd",
    "influxdb",
    "influx"
  ],
  "homepage": "https://www.hitmeister.de/",
  "support": {
    "email": "devops@hitmeister.de",
    "source": "https://github.com/hitmeister/metrics",
    "issues": "https://github.com/hitmeister/metrics/issues"
  },
  "require": {
    "clue/socket-raw": "~1.2",
    "php": ">=5.5",
    "psr/log": "~1.0",
    "symfony/stopwatch": "~2.7"
  },
  "require-dev": {
    "athletic/athletic": "~0.1",
    "mockery/mockery": "^0.9.4",
    "phpunit/phpunit": "^4.8",
    "satooshi/php-coveralls": "^0.6.1"
  },
  "suggest": {
    "monolog/monolog": "Allows more advanced logging of the application flow"
  },
  "autoload": {
    "psr-4": {
      "Hitmeister\\Component\\Metrics\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Hitmeister\\Component\\Metrics\\Tests\\": "tests/Metrics/",
      "Hitmeister\\Component\\Metrics\\Benchmarks\\": "benchmarks/Metrics/"
    }
  }
}
